<body>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.5.0/socket.io.js" 
    integrity="sha512-/xb5+PNOA079FJkngKI2jvID5lyiqdHXaUUcfmzE0X0BdpkgzIWHC59LOG90a2jDcOyRsd1luOr24UCCAG8NNw==" 
    crossorigin="anonymous" referrerpolicy="no-referrer"></script> <!-- 소켓 링크 파일-->
    <div>채팅방</div>
    <input id="input1">
    <div id="content"></div>
    <button id="send">서버에 메시지 보내기</button>
    <button id="room1">채팅방1 입장</button>
    <button id="room1-send">채팅방1에서 메시지 보내기</button>
    <script>
        var socket = io();
        

        $('#room1-send').click(function(){
            socket.emit('room1-send', '반가워 채팅방1 사람들아');
        });

        $('#room1').click(function(){
            socket.emit('joinroom', '채팅방입장시켜줘');
        });

        $('#send').click(function(){
            socket.emit('user-send', $('#input1').val()); // 서버에 웹소켓으로 실시간 메시지 보내기
        });
        socket.on('broadcast', function(data){
            $('#content').append('<div>' + data + '</div>');
        });
    </script>




